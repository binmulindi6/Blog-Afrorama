<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('./partials/head.ejs') %>
  <style>
    .img-container{
      height: 300px;
      width: 500px;
      background-image: url('/uploads/<%=article.image%>');
      background-position: center;
      background-size: contain;
      background-repeat: no-repeat;
      background-color: rgba(135, 135, 135, 0.411);
      margin: 10px;
    }
  </style>
</head>
<body>
    <%- include('./partials/header.ejs')  %>

    <div class="container">
      <h1 class="mb-1"><%= article.title %></h1>
      <div class="text-muted mb-2">
        <%= article.createdAt.toLocaleDateString() %>
      </div>
      <a href="/" class="btn btn-secondary">All Articles</a>
      <a href="/articles/edit/<%= article.id %>" class="btn btn-info">Edit</a>
      <form action="/articles/<%= article.id %>?_method=DELETE" method="POST" class="d-inline">
        <button type="submit" class="btn btn-danger">Delete</button>
      </form>
      <div class="img-container"></div>
      <div>
        <%- article.sanitizedHtml %>
      </div>
    </div>

    <%- include('./partials/footer.ejs')  %>
</body>
</html>